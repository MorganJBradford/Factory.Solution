@{
  Layout = "_EngineerLayout";
}
@model Factory.Models.Engineer

<h1>Add a new engineer</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required="required" })
  @Html.Label("Select machine")
  @Html.DropDownList("MachineId", (SelectList)ViewBag.MachineId, "None")

  <input type="submit" value="Add new machine" />
}