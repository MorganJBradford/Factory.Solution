@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Engineer>

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <p>No engineers have been added to the system</p>
}

<ul>
@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
}
</ul>

<button>@Html.ActionLink("New engineer", "Create")</button>
<hr/>
<button>@Html.ActionLink("Home", "Index", "Home")</button>
<button>@Html.ActionLink("All engineers", "Index")</button>
<button>@Html.ActionLink("All machines", "Index", "Machines")</button>