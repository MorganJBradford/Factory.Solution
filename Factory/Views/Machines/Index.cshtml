@{
  Layout = "_MachineLayout";
}
@using Factory.Models
@model List<Factory.Models.Machine>

<h1>Machines</h1>

@using (Html.BeginForm())
{
  @Html.Label("Search by make/model:")
  @Html.TextBox("SearchString")  
  <input type="submit" value="Search" />
}

@if (@Model.Count == 0)
{
  <p>No machines have been added to the system</p>
}

<ul>
@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
}
</ul>

<button>@Html.ActionLink("New machine", "Create")</button>